# ================================================================
# EXAMPLE ENVIRONMENT VARIABLES - CLINIC BOOKING API
# Copy this file to .env and fill in your actual values
# ================================================================

# Environment
NODE_ENV=development

# Server Configuration
PORT=3000
HOST=localhost

# Database Configuration (MySQL)
DB_HOST=localhost
DB_PORT=3306
DB_USER=root
DB_PASSWORD=yusuke
DB_NAME=clinic_booking_system
DB_CONNECTION_LIMIT=10
DB_ACQUIRE_TIMEOUT=60000
DB_TIMEOUT=60000
DB_CHARSET=utf8mb4

# Security Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production-minimum-32-characters
JWT_EXPIRATION=24h
BCRYPT_ROUNDS=12
CORS_ORIGIN=*
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX=100

# Logging Configuration
LOG_LEVEL=debug
LOG_FORMAT=combined
LOG_CONSOLE=true
LOG_FILE=false
LOG_FILE_PATH=./logs/app.log
LOG_MAX_SIZE=10m
LOG_MAX_FILES=5

# API Configuration
API_PREFIX=/api
API_VERSION=v1
DEFAULT_PAGE_SIZE=20
MAX_PAGE_SIZE=100

# Email Configuration (Optional - for future notifications)
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_SECURE=false
# EMAIL_USER=your-email@gmail.com
# EMAIL_PASSWORD=your-email-password
# EMAIL_FROM=noreply@clinic.com

# File Upload Configuration
MAX_FILE_SIZE=5242880
ALLOWED_FILE_TYPES=image/jpeg,image/png,application/pdf
UPLOAD_DIR=./uploads

# Cache Configuration (Redis - Optional)
# CACHE_ENABLED=false
# REDIS_HOST=localhost
# REDIS_PORT=6379
# REDIS_PASSWORD=
# REDIS_DATABASE=0
# CACHE_TTL=3600

# External APIs (Optional - for future integrations)
# SMS_API_KEY=your-sms-api-key
# SMS_BASE_URL=https://api.sms-provider.com

# Payment Gateway (Optional - for future payments)
# PAYMENT_PUBLIC_KEY=your-payment-public-key
# PAYMENT_SECRET_KEY=your-payment-secret-key
# PAYMENT_WEBHOOK_SECRET=your-webhook-secret